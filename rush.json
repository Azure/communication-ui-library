{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.47.0",
  "pnpmVersion": "5.17.3",
  "pnpmOptions": {
    "strictPeerDependencies": true
  },
  "nodeSupportedVersionRange": ">=12.13.0 <13.0.0 || >=14.15.0 <15.0.0",
  "ensureConsistentVersions": true,
  "gitPolicy": {
    "versionBumpCommitMessage": "Applying package updates. [skip-ci]",
    "changeLogUpdateCommitMessage": "Applying package updates. [skip-ci]"
  },
  "repository": {
    "url": "https://github.com/Azure/communication-ui-library",
    "defaultBranch": "main"
  },
  "telemetryEnabled": false,
  "projects": [
    {
      "packageName": "@internal/acs-ui-common",
      "projectFolder": "packages/acs-ui-common",
      "reviewCategory": "internal"
    },
    {
      "packageName": "@azure/communication-react",
      "projectFolder": "packages/communication-react",
      "reviewCategory": "production"
    },
    {
      "packageName": "@internal/react-components",
      "projectFolder": "packages/react-components",
      "reviewCategory": "internal"
    },
    {
      "packageName": "@internal/react-composites",
      "projectFolder": "packages/react-composites",
      "reviewCategory": "internal"
    },
    {
      "packageName": "@internal/chat-stateful-client",
      "projectFolder": "packages/chat-stateful-client",
      "reviewCategory": "internal"
    },
    {
      "packageName": "@internal/chat-component-bindings",
      "projectFolder": "packages/chat-component-bindings",
      "reviewCategory": "internal"
    },
    {
      "packageName": "@internal/calling-stateful-client",
      "projectFolder": "packages/calling-stateful-client",
      "reviewCategory": "internal"
    },
    {
      "packageName": "@internal/calling-component-bindings",
      "projectFolder": "packages/calling-component-bindings",
      "reviewCategory": "internal"
    },
    {
      "packageName": "calling",
      "projectFolder": "samples/Calling",
      "reviewCategory": "sample"
    },
    {
      "packageName": "chat",
      "projectFolder": "samples/Chat",
      "reviewCategory": "sample"
    },
    {
      "packageName": "server",
      "projectFolder": "samples/Server",
      "reviewCategory": "sample"
    },
    {
      "packageName": "sample-static-html-composites",
      "projectFolder": "samples/StaticHtmlComposites",
      "reviewCategory": "sample"
    },
    {
      "packageName": "@internal/storybook",
