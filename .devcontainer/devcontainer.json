{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "GitHub.copilot",
        "ms-azuretools.vscode-azureappservice",
        "nan-jiang.before-after-diff-checker",
        "esbenp.prettier-vscode",
        "vscode-icons-team.vscode-icons"
      ]
    }
  },
  "postCreateCommand": "bash -i -c 'nvm install 22.17.1 && nvm use 22.17.1' && npm install @microsoft/rush -g && rush update"
}
