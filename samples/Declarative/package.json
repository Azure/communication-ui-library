{
  "name": "acs-declarative-sample",
  "version": "0.0.1",
  "private": true,
  "description": "This a temporary prototyping space for exploring the new declarative state management architecture.",
  "scripts": {
    "build": "react-scripts build",
    "build:prod": "npm run build && copyfiles -u 3 ../Server/dist/**/* dist && copyfiles ./build/**/* dist",
    "start": "concurrently \"cd ../Server && npm run start:dev\" \"npm run start:app\"",
    "start:app": "rimraf ./build && react-scripts start",
    "start:debug": "concurrently \"cd ../Server && npm run start:debug\" \"npm run start\"",
    "start:prod": "node dist/server.js",
    "test": "react-scripts test --env=jsdom --watchAll=false",
    "test:watch": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "prettier": "prettier --write --config ../../.prettierrc **/*.js **/*.ts",
    "prettier:check": "prettier --check --config ../../.prettierrc **/*.js **/*.ts",
    "lint": "eslint */**/*.{ts,tsx}",
    "lint:fix": "eslint */**/*.{ts,tsx} --fix",
    "lint:quiet": "eslint */**/*.{ts,tsx} --quiet",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!/node_modules/",
      "!src/mocks/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@azure/communication-administration": "^1.0.0-beta.3",
    "@azure/communication-chat": "1.0.0-beta.3",
    "@azure/communication-common": "1.0.0-beta.3",
    "@azure/communication-signaling": "1.0.0-beta.1",
    "@azure/communication-ui": "^0.1.0",
    "@azure/core-http": "^1.2.3",
    "react": "^16.13.1",
    "react-scripts": "^4.0.2"
  },
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "acs-server-sample": "0.0.1",
    "babel-eslint": "^10.0.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-header": "^3.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "prettier": "2.0.5",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.0.5",
    "rimraf": "^2.6.2"
  },
  "proxy": "http://localhost:8080/"
}
